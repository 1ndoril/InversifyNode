{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "Basic/**/*.ts",
        "MongoDB/**/*.ts",
        "typings/index.d.ts",
        "node_modules/inversify-dts/**/*.d.ts"
    ],
    "files": [
        "Basic/bootstrap.ts",
        "Basic/controller/home.ts",
        "Basic/controller/user.ts",
        "Basic/service/user.ts",
        "Basic/test/controller/home.spec.ts",
        "Basic/test/controller/user.spec.ts",
        "Basic/test/service/user.spec.ts",
        "MongoDB/bootstrap.ts",
        "MongoDB/controller/home.ts",
        "MongoDB/controller/user.ts",
        "MongoDB/models/user.ts",
        "MongoDB/service/user.ts",
        "MongoDB/test/controller/home.spec.ts",
        "MongoDB/test/controller/user.spec.ts",
        "MongoDB/test/service/user.spec.ts",
        "MongoDB/utils/mongodb/client.ts",
        "MongoDB/utils/mongodb/connection.ts",
        "typings/index.d.ts",
        "node_modules/inversify-dts/inversify-binding-decorators/inversify-binding-decorators.d.ts",
        "node_modules/inversify-dts/inversify-express-utils/inversify-express-utils.d.ts",
        "node_modules/inversify-dts/inversify-logger-middleware/inversify-logger-middleware.d.ts",
        "node_modules/inversify-dts/inversify/inversify.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
